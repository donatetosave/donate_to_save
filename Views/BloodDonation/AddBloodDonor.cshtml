@{
    ViewBag.Title = "DonateBlood";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>DonateBlood</title>
</head>
<body>
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <hr />
        <div class="row">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Add Details</h1>
                    <ol class="breadcrumb">
                        <li>
                            <a href="#">Home</a>
                        </li>
                        <li class="active">DonateBlood</li>
                    </ol>
                </div>
            </div>
            <div class="col-md-6">

                <form name="addblooddonation" id="DonationForm" action="~/BloodDonation/AddBloodDonor">
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Name:</label>
                            <input name="Name" class="form-control" id="Name" required="" maxlength="999" style="resize:none" />
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Blood Type:</label>
                            <input name="BloodType" class="form-control" id="BloodType" required="" maxlength="999" style="resize:none" />
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Address:</label>
                            <input name="Address" class="form-control" id="Address" required="" maxlength="999" style="resize:none" />
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Phone No:</label>
                            <input name="PhoneNo" class="form-control" id="PhoneNo" required="" maxlength="999" style="resize:none" />
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Email:</label>
                            <input name="Email" type="email" class="form-control" id="Email" required="" maxlength="999" style="resize:none" />
                        </div>
                    </div>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary">Add Donor</button>
                </form>
            </div>
        </div>
        </div>

</body>
</html>