@{
    ViewBag.Title = "ViewReview";
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>ViewReview</title>
</head>
<body>
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <hr />


        
        <div class="row">
            <div class="col-lg-12">
                <h2>Public Reviews</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li class="active">Reviews</li>
                </ol>
            </div>
        </div>
        <br>
        <br>
        @foreach (var r in Model)
        {
            <div class="row">

                @if (r.User_Id != null)
                {


                    <div class="col-md-1">
                        <img width="80" height="80" class="img-responsive img-rounded" src="@r.User.Image" alt="loading...">
                    </div>
                    <div class="col-md-8">

                        <p><strong>Review: </strong>@r.Reviews</p>
                        <h5><b> @r.User.Name</b><br /></h5>
                    </div>


                    @*<a class="btn btn-sm btn-danger pull-right" style="margin-right: 1%" href="~/Contact/DeleteMessage?id=@r.Id">Remove it!</a>*@


                }
                else
                {
                    <div class="col-md-1">
                        <img width="80" height="80" class="img-responsive img-rounded" src="~/images/dummy.png" alt="loading...">
                    </div>
                    <div class="col-md-8">

                        <p><strong>Review: </strong>@r.Reviews</p>
                        <h5><b>No Name</b><br /></h5>
                    </div>

                }


            </div>
            <br>
            <br>
            <br>
            <br>
        }
        <div class="row">
            <div class="col-md-6">
                <h3>Add Review</h3>
                <form name="addreview" id="ReviewForm" action="~/Review/AddReview">
                    <div class="control-group form-group">
                        <div class="controls">
                            <textarea name="Reviews" rows="10" cols="10" class="form-control" id="r1" required="" maxlength="999" style="resize:none"></textarea>
                        </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary">Add Review</button>
                </form>
            </div>
        </div>

    </div>
</body>
</html>