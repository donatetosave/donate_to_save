@{
    ViewBag.Title = "ViewTasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<DONATE_TO_SAVE.Models.Task>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title></title>

</head>
<body>
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Messaging
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Home</a>
                    </li>
                    <li class="active">Tasks</li>
                </ol>
            </div>
        </div>
        @*<div>
            @if (Session["uname"] != null)
            {
                <form class="navbar-form navbar-center" action="/Search/messageSearchFunction" role="search">
                    <div class="form-group">
                        <input type="text" maxlength="100" size="139" name="search" required="" class="form-control" placeholder="Search Your Tasks Here" />
                    </div>
                    <input type="submit" class="btn btn-default btn-info" value="Search" />
                </form>
            }
        </div>*@
        <hr />
        <!-- /.row -->
        <!-- Intro Content -->
        <h1>Tasks</h1>
        @foreach (var m in Model)
        {
            if (m.User_ID == (int)Session["userID"] || (string)Session["uname"] == "admin")
            {
                <hr />
                <div class="row">
                    <div class="col-md-2">
                        <img width="140" height="140" class="img-responsive img-rounded" src="@m.User.Image" alt="">
                    </div>
                    <div class="col-md-9">
                        <h3>
                            @m.User.Name <small class="pull-right"> Posted on: @m.Date</small><br />

                            @if (m.Status != "done")
                            {
                                <a class="btn btn-sm btn-success pull-right" style="margin-right: 1%" href="~/Contact/changeTaskStatus?id=@m.Id">Done ?</a>
                            }
                            
                            @if ((string)Session["uname"] == "admin")
                            {
                                <a class="btn btn-sm btn-danger pull-right" style="margin-right: 1%; margin-left:3%" href="~/Contact/DeleteTask?id=@m.Id">Reomve</a>
                            }
                        </h3>
                        <strong>Task: </strong>@m.Task1
                        @if(m.Status != "done")
                        {   
                            <p style="margin-left:30% ;margin-top:3% ; background-color:bisque"><strong>Status: </strong>Not Done Yet</p>
                        }
                        else
                        {   
                            <p style="margin-left:30% ;margin-top:3% ; background-color:lightgreen"><strong>Status: </strong>Done</p>
                        }
                        </div>
                    <hr />
                </div>
                @*if (m.Replies.Count != 0)
                {
                    <div style="background-color:aliceblue">
                        <hr />
                        <h4>Reply From Admin</h4>
                        <hr />
                    </div>
                    foreach (var r in m.Replies)
                    {
                        <div class="row">
                            <div class="col-md-9">
                                <h3 class="pull-right">Admin</h3>
                                <h3>
                                    <small class="pull-left"> Replied on: @r.Date</small><br />
                                    @if ((string)Session["uname"] == "admin")
                                    {
                                        <a class="btn btn-sm btn-danger pull-left" style="margin-right:5%" href="~/Reply/DeleteReply?id=@r.Id">Remove it!</a>
                                    }
                                </h3>
                                @r.Reply1
                            </div>
                            <div class="col-md-2">
                                <img width="100" height="100" class="img-responsive  img-rounded" style="margin-top: 2%" src="@r.User.Image" alt="">
                            </div>
                            <br />
                        </div>
                    }
                }
                else
                {
                    <div style="background-color:aliceblue">
                        <hr />
                        <h3>No Reply From Admin Yet</h3>
                        <hr />
                    </div>
                }

                @*if(m.User.Tasks.Count != 0)
                    {
                        <div style="background-color:lightblue">
                            <hr />
                            <h4>Task From Admin</h4>
                            <hr />
                        </div>
                        foreach (var t in m.User.Tasks)
                        {
                            <div style="background-color:lightblue" class="row">
                                <div class="col-md-9">
                                    <h3 class="pull-right">Admin</h3>
                                    <h3>
                                        @if ((string)Session["uname"] == "admin")
                                        {
                                            <a class="btn btn-sm btn-danger pull-left" style="margin-right:5%" href="~/Contact/DeleteTask?id=@t.Id">Remove it!</a>
                                        }
                                    </h3>
                                    @t.Task1
                                </div>
                                <div class="col-md-2">
                                    <img width="100" height="100" class="img-responsive  img-rounded" style="margin-top: 2%" src="@t.User.Image" alt="">
                                </div>
                                <br />
                            </div>
                        }
                    }*@
            }

        }
        <br />
        <hr />
        <br />
        <br />
    </div>
</body>
</html>
